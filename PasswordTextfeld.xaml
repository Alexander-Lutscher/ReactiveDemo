<Window x:Class="ReactiveDemo.PasswordTextfeld"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ReactiveDemo"
        mc:Ignorable="d"
        Title="PasswordTextfeld" Height="450" Width="800">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="TextBox" Width="200" Margin="10 0" Padding="5" HorizontalAlignment="Left"/>
                <Button x:Name="Button" Width="100" Margin="10 0" Padding="5"> Click Me</Button>
                </StackPanel>
        </Grid>
</Window>
